generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Website {
  id        String    @id @default(uuid())
  domain    String    @unique
  ownerId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sessions  Session[]
  users     User      @relation(fields: [ownerId], references: [id])
}

model Session {
  id           String     @id @default(uuid())
  websiteId    String
  website      Website    @relation(fields: [websiteId], references: [id])
  userAgent    String
  country      String?
  region       String?
  city         String?
  deviceType   String?
  os           String?
  browser      String?
  screen       String
  language     String?
  createdAt    DateTime   @default(now())
  lastActivity DateTime
  pageViews    PageView[]
  events       Event[]
}

model PageView {
  id        String   @id @default(uuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  url       String
  referrer  String?
  createdAt DateTime @default(now())
}

model Event {
  id        String   @id @default(uuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  type      String
  data      Json
  createdAt DateTime @default(now())
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name  String
  websites  Website[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
